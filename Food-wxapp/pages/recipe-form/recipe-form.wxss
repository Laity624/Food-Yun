/* 页面容器 */
.recipe-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #fafafa;
  padding: 0;
}
.main{
  flex: 1;
  padding: 20rpx;
  padding-bottom: 120rpx; /* 为固定按钮留出空间 */
  background-color: #f7f3f3;
}


/* 表单内容 */
.form-content {
  height: calc(100vh - 200rpx); /* 减去固定按钮的高度 */
}

.form-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.section-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
}

/* 图片上传 */
.images-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 150rpx;
  height: 150rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.image-item .uploaded-image {
  width: 100%;
  height: 100%;
}

.image-delete {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 32rpx;
  height: 32rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-upload {
  width: 150rpx;
  height: 150rpx;
  background-color: #f8f9fa;
  border: 2rpx dashed #dcdfe6;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.upload-text {
  font-size: 20rpx;
  color: #909399;
  text-align: center;
}

/* 标签选择 */
.tag-category {
  margin-bottom: 32rpx;
}

.tag-category-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  border: 1rpx solid #e0e0e0;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.2s ease;
}

.tag-item.selected {
  background-color: #ff6b35;
  border-color: #ff6b35;
  color: #fff;
}

.tag-item:active {
  transform: scale(0.95);
}

/* 输入组 */
.input-group {
  margin-bottom: 32rpx;
}


.input-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.section-item{
  background-color: #f8f9fa;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
  padding: 12rpx;
}

.input-row {
  display: flex;
  gap: 24rpx;
}

.input-column {
  flex: 1;
}

.picker-field {
  padding: 24rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
  position: relative;
}

.picker-field::after {
  content: "▼";
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #c0c4cc;
}

.picker-field:active {
  background-color: #f5f5f5;
}

/* 分区头部 */
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.section-action {
  font-size: 24rpx;
  color: #ff6b35;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

/* 食材项 */
.ingredient-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
  padding: 12rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
}

.ingredient-item .van-field {
  flex: 1;
  background-color: transparent;
}

.ingredient-item .van-field:first-child {
  flex: 2;
}

/* 步骤项 */
.step-item {
  margin-bottom: 16rpx;
  padding: 16rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
}

.step-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.step-number {
  width: 48rpx;
  height: 48rpx;
  background-color: #ff6b35;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  flex-shrink: 0;
}

.step-input {
  width: 100% !important;
  background-color: transparent !important;
}

.step-input .van-field__control {
  width: 100% !important;
  min-height: 80rpx !important;
}

/* 隐私设置 */
.privacy-setting {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
}

.privacy-info {
  flex: 1;
}

.privacy-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.privacy-desc {
  font-size: 24rpx;
  color: #909399;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
  padding: 16rpx 32rpx 40rpx;
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
}

.footer-buttons {
  display: flex;
  justify-content: space-between;
}

.footer .van-button {
  border-radius: 16rpx;
  width: 300rpx;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
  flex: 1;
}

.save-btn .van-button__text {
  color: #ff6b35 !important;
}


/* 自定义Vant组件样式 */
.van-field {
  padding: 0 !important;
  background-color: transparent !important;
}

.van-field__control {
  font-size: 28rpx !important;
  color: #333 !important;
}

.van-field__control::placeholder {
  color: #c0c4cc !important;
}

.van-switch {
  transform: scale(0.8);
}

/* 安全区域适配 */
.safe-area-top {
  padding-top: env(safe-area-inset-top, 44rpx);
}

.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom, 34rpx);
}