/* 全屏页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: env(safe-area-inset-top) 0 0 0;
  box-sizing: border-box;
}

/* 头部渐变背景 */
.gradient-header {
  background: transparent;
  padding: 180rpx 30rpx 60rpx 30rpx;
  position: relative;
  overflow: hidden;
}

/* 装饰性圆圈 */
.decorative-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: -100rpx;
  right: -100rpx;
}

.circle-2 {
  width: 150rpx;
  height: 150rpx;
  bottom: -75rpx;
  left: -75rpx;
}

/* 顶部标题区域 */
.header-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.header-buttons {
  display: flex;
  gap: 20rpx;
}

.header-btn {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-btn .icon {
  font-size: 28rpx;
  color: #fff;
}

/* 用户信息区域 */
.user-info-section {
  display: flex;
  align-items: center;
  gap: 30rpx;
  margin-bottom: 40rpx;
}

.avatar-section {
  position: relative;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 3rpx solid #fff;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.online-status {
  width: 24rpx;
  height: 24rpx;
  background: #07C160;
  border: 2rpx solid #fff;
  border-radius: 50%;
  position: absolute;
  bottom: 0;
  right: 0;
}

.user-details {
  flex: 1;
}

.name-section {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.vip-badge {
  background: linear-gradient(45deg, #ffd700, #ffed4e);
  color: #000;
  font-size: 20rpx;
  font-weight: bold;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.edit-nickname-btn {
  font-size: 28rpx;
  color: #fff;
  opacity: 0.8;
}

.user-bio {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 20rpx;
}

.stats-section {
  display: flex;
  gap: 40rpx;
}

.stat-item {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 搜索码卡片 */
.search-code-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.search-code-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.qr-icon {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(45deg, #ff6b6b, #ee5a24);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.qr-icon .icon {
  font-size: 28rpx;
  color: #fff;
}

.search-code-info {
  display: flex;
  flex-direction: column;
}

.search-code-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 4rpx;
}

.search-code-value {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  font-family: monospace;
}

.search-code-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 50rpx;
  height: 50rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn .icon {
  font-size: 24rpx;
  color: #fff;
}

/* 内容区域 */
.content-section {
  background: #fff;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  margin-top: -30rpx;
  padding: 40rpx 30rpx;
}

/* 快捷功能网格 */
.quick-actions-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
  margin-bottom: 40rpx;
}

.quick-action {
  text-align: center;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 16rpx;
}

.action-icon.recipes {
  background: linear-gradient(45deg, #ff6b6b, #ee5a24);
}

.action-icon.orders {
  background: linear-gradient(45deg, #2ecc71, #27ae60);
}

.action-icon.favorites {
  background: linear-gradient(45deg, #9b59b6, #8e44ad);
}

.action-icon.statistics {
  background: linear-gradient(45deg, #3498db, #2980b9);
}

.action-icon .icon {
  font-size: 36rpx;
  color: #fff;
}

.action-label {
  font-size: 24rpx;
  color: #666;
}

/* 菜单列表 */
.menu-list {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.menu-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-icon.recipes {
  background: #ffeaa7;
}

.menu-icon.friends {
  background: #dff9fb;
}

.menu-icon.favorites {
  background: #ffcccc;
}

.menu-icon.settings {
  background: #dfe6e9;
}

.menu-icon.help {
  background: #fdcb6e;
}

.menu-icon.about {
  background: #74b9ff;
}

.menu-icon .icon {
  font-size: 28rpx;
}

.menu-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.menu-item-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.menu-count {
  font-size: 24rpx;
  color: #999;
}

.menu-arrow {
  font-size: 24rpx;
  color: #ccc;
}

/* 退出登录按钮 */
.logout-section {
  margin-top: 40rpx;
  padding: 0 30rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(45deg, #ff4757, #ff6b6b);
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logout-btn::after {
  border: none;
}

/* 模态框样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.modal-content {
  background: #fff;
  border-radius: 20rpx;
  width: 600rpx;
  max-width: 80%;
  overflow: hidden;
}

.modal-header {
  padding: 40rpx 40rpx 20rpx;
  text-align: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-body {
  padding: 40rpx;
}

.nickname-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.nickname-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f5f5f5;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border: none;
  border-radius: 0;
  font-size: 28rpx;
  background: none;
}

.modal-btn::after {
  border: none;
}

.modal-btn.cancel {
  color: #999;
  border-right: 1rpx solid #f5f5f5;
}

.modal-btn.confirm {
  color: #07C160;
  font-weight: bold;
}