/* 全屏页面容器 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #ff9a9e 0%, #fecfef 30%, #f8f9fa 100%);
  padding: env(safe-area-inset-top) 32rpx 0 32rpx;
  box-sizing: border-box;
}

/* 移除了状态栏样式 */

.iconfont {
  font-family: "iconfont" !important;
  font-size: 28rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
}

/* 头部用户信息 */
.header-section {
  padding: 60rpx 0 32rpx 0;
}

.user-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 48rpx;
}

.greeting-text {
  display: block;
  font-size: 48rpx;
  font-weight: 800;
  color: #fff;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.3);
  margin-top: 30rpx;
  margin-bottom: 8rpx;
}

.sub-text {
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
}

/* 搜索框 */
.search-container {
  position: relative;
  margin-bottom: 48rpx;
}

.search-icon {
  position: absolute;
  left: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
  font-size: 32rpx;
  z-index: 2;
}

.search-input {
  width: 100%;
  height: 88rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(40rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 88rpx;
  padding: 0 32rpx 0 80rpx;
  font-size: 28rpx;
  color: #333;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.1);
  box-sizing: border-box;
}

.search-input:focus {
  border-color: #ff9a9e;
}

.placeholder {
  color: #999;
}

/* 快捷功能网格 */
.quick-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.feature-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.1);
}

.feature-card:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
}

.icon-container {
  width: 112rpx;
  height: 112rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.2);
}

.gradient-green {
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
}

.gradient-purple {
  background: linear-gradient(135deg, #9b59b6 0%, #8e44ad 100%);
}

.gradient-orange {
  background: linear-gradient(135deg, #e67e22 0%, #d35400 100%);
}

.floating {
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
  40% { transform: translateY(-20rpx); }
  60% { transform: translateY(-10rpx); }
}

.feature-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #333;
}

/* 热门菜谱区域 */
.hot-recipes {
  margin-bottom: 48rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 800;
  color: #2c3e50;
}

.view-more {
  display: flex;
  align-items: center;
  color: #ff6b6b;
  font-size: 24rpx;
  font-weight: 500;
}

.more-text {
  margin-right: 8rpx;
}

/* 菜谱列表 */
.recipes-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.recipe-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(30rpx);
  border-radius: 32rpx;
  padding: 32rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
  box-shadow: 0 12rpx 32rpx rgba(0,0,0,0.1);
}

.recipe-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.08);
}

.recipe-image-container {
  position: relative;
  margin-bottom: 24rpx;
}

.recipe-image {
  width: 100%;
  height: 240rpx;
  border-radius: 24rpx;
  object-fit: cover;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.15);
}

.recipe-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.2);
}

.recipe-badge.popular {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
}

.recipe-badge.vegetarian {
  background: linear-gradient(135deg, #27ae60 0%, #229954 100%);
}

.badge-icon {
  font-size: 24rpx;
  color: #fff;
}

.recipe-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recipe-desc {
  display: block;
  font-size: 26rpx;
  color: #7f8c8d;
  margin-bottom: 20rpx;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.recipe-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #95a5a6;
}

.meta-item.views {
  color: #ff6b6b;
  font-weight: 500;
}

.meta-text {
  font-size: 22rpx;
}

/* 加载和空状态 */
.loading-container,
.empty-container {
  text-align: center;
  padding: 80rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #7f8c8d;
}

.empty-icon {
  font-size: 64rpx;
  display: block;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #7f8c8d;
}