<import src="./we-cropper/we-cropper.wxml" />

<view class="cropper-wrapper">
  <view class="cropper-area"
        catch:touchstart="touchStart"
        catch:touchmove="touchMove"
        catch:touchend="touchEnd">
    <template is="we-cropper" data="{{...cropperOpt}}" />
  </view>
  <view class="cropper-buttons">
    <view class="upload btn" bindtap="uploadTap">取消</view>
    <view class="getCropperImage btn" bindtap="getCropperImage">确定</view>
  </view>
</view>


