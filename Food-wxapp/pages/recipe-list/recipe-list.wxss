/* 分类筛选 */
.category-scroll {
  white-space: nowrap;
  margin-bottom: 20rpx;
  background: #fff;
  padding: 20rpx 0;
}

.category-list {
  display: inline-flex;
  padding: 0 20rpx;
}

.category-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
}

.category-item.active {
  background: #07c160;
  color: #fff;
}

/* 菜谱列表 */
.recipe-list {
  padding: 0 20rpx;
}

.recipe-item {
  display: flex;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.recipe-image {
  width: 160rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.recipe-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.recipe-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recipe-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recipe-meta {
  display: flex;
  margin-bottom: 12rpx;
}

.meta-item {
  font-size: 22rpx;
  color: #999;
  margin-right: 20rpx;
}

.recipe-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

.creator-info {
  display: flex;
  align-items: center;
}

.creator-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.creator-name {
  font-size: 22rpx;
  color: #999;
}

.create-time {
  font-size: 22rpx;
  color: #999;
}

/* 悬浮按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  width: 100rpx;
  height: 100rpx;
  background: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.4);
  z-index: 100;
}

.fab-icon {
  font-size: 48rpx;
  color: #fff;
  font-weight: bold;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 24rpx;
}