.login-container {
  height: 100vh;
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 50%, #fecfef 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

/* Logo区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  margin-bottom: 30rpx;
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
  box-shadow: 0 0 40rpx rgba(255, 154, 158, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
}

.app-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* Logo圆点指示器 */
.logo-dots {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 30rpx;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: rgba(255, 255, 255, 0.4);
}

.dot.active {
  width: 32rpx;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.8);
}

.logo-icon {
  font-size: 64rpx;
}

/* 浮动装饰效果 */
.floating-shapes {
  position: absolute;
  width: 100%;
  height: 100%;
  overflow: hidden;
  pointer-events: none;
}

.shape {
  position: absolute;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  animation: float 6s ease-in-out infinite;
}

.shape:nth-child(1) {
  width: 80rpx;
  height: 80rpx;
  top: 20%;
  left: 10%;
  animation-delay: 0s;
}

.shape:nth-child(2) {
  width: 120rpx;
  height: 120rpx;
  top: 60%;
  right: 10%;
  animation-delay: 2s;
}

.shape:nth-child(3) {
  width: 60rpx;
  height: 60rpx;
  top: 40%;
  left: 60%;
  animation-delay: 4s;
}

@keyframes float {
  0%, 100% { 
    transform: translateY(0) rotate(0deg); 
  }
  50% { 
    transform: translateY(-20rpx) rotate(180deg); 
  }
}

/* 登录区域 */
.login-section {
  width: 100%;
  max-width: 600rpx;
}

.login-area {
  background: #fff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 300rpx;
}

.login-tips {
  text-align: center;
  margin-bottom: 60rpx;
}

.tips-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.tips-desc {
  font-size: 28rpx;
  color: #666;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 8rpx 32rpx rgba(34, 197, 94, 0.3);
  transition: all 0.3s ease;
}

.login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(34, 197, 94, 0.3);
}

.login-btn::after {
  border: none;
}

.wechat-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

/* 已登录状态 */
.logged-in {
  background: #fff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 30rpx;
}

.user-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.login-success {
  display: block;
  font-size: 28rpx;
  color: #07c160;
  margin-bottom: 60rpx;
}

.enter-btn {
  width: 100%;
  height: 88rpx;
  background: #07c160;
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
}

.enter-btn::after {
  border: none;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background: transparent;
  border: 2rpx solid #ddd;
  border-radius: 44rpx;
  color: #666;
  font-size: 28rpx;
  margin-bottom: 0;
}

.logout-btn::after {
  border: none;
}

/* 暂不登录按钮 */
.preview-btn {
  width: 100%;
  height: 88rpx;
  background: rgba(0, 0, 0, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 44rpx;
  color: rgba(255, 255, 255, 0.95);
  font-size: 30rpx;
  font-weight: 500;
  margin-top: 30rpx;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-btn:active {
  background: rgba(0, 0, 0, 0.2);
  transform: translateY(2rpx);
}

.preview-btn::after {
  border: none;
}
/* 底部说明 */
.footer {
  position: absolute;
  bottom: 80rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: center;
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.footer-link {
  font-size: 24rpx;
  color: #fef08a;
  text-decoration: underline;
}