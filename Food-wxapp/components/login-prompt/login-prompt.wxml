<view class="login-prompt-modal" wx:if="{{visible}}">
  <view class="modal-mask" bindtap="onClose"></view>
  <view class="modal-content">
    <view class="modal-header">
      <text class="modal-title">{{title}}</text>
      <text class="modal-close" bindtap="onClose">×</text>
    </view>
    <view class="modal-body">
      <image class="prompt-icon" src="/images/lock.png"></image>
      <text class="prompt-text">{{content}}</text>
      <text class="prompt-desc">{{description}}</text>
    </view>
    <view class="modal-footer">
      <button class="btn-cancel" bindtap="onClose">稍后再说</button>
      <button class="btn-confirm" bindtap="onLogin">立即登录</button>
    </view>
  </view>
</view>