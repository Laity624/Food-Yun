/* 登录提示弹窗 - 优化版 */
.login-prompt-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  animation: modalFadeIn 0.3s ease-out;
}

@keyframes modalFadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10rpx);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0.95);
  animation: contentScaleIn 0.3s ease-out forwards;
  width: 600rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2), 0 0 0 1rpx rgba(255, 255, 255, 0.1) inset;
}

@keyframes contentScaleIn {
  to {
    transform: translate(-50%, -50%) scale(1);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx 40rpx 28rpx;
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
}

.modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.modal-close {
  font-size: 38rpx;
  color: rgba(255, 255, 255, 0.8);
  padding: 12rpx;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.modal-close:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.9);
}

.modal-body {
  padding: 48rpx 40rpx 36rpx;
  text-align: center;
}

.prompt-icon {
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto 24rpx;
  border-radius: 50%;
  box-shadow: 0 8rpx 20rpx rgba(255, 154, 158, 0.3);
}

.prompt-text {
  display: block;
  font-size: 32rpx;
  color: #2d3748;
  margin-bottom: 16rpx;
  font-weight: 600;
  line-height: 1.4;
}

.prompt-desc {
  display: block;
  font-size: 26rpx;
  color: #718096;
  line-height: 1.5;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 0 40rpx 40rpx;
}

.btn-cancel,
.btn-confirm {
  flex: 1;
  height: 92rpx;
  border: none;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.btn-cancel {
  background: #f7fafc;
  color: #718096;
  border: 2rpx solid #e2e8f0;
}

.btn-cancel:active {
  background: #edf2f7;
  transform: translateY(2rpx);
}

.btn-cancel::after {
  border: none;
}

.btn-confirm {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff9a9e 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.4);
}

.btn-confirm:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(255, 107, 107, 0.4);
}

.btn-confirm::after {
  border: none;
}

/* 按钮点击效果 */
.btn-cancel:active::before,
.btn-confirm:active::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  transform: translate(-50%, -50%) scale(0);
  animation: buttonRipple 0.6s ease-out;
}

@keyframes buttonRipple {
  to {
    transform: translate(-50%, -50%) scale(4);
    opacity: 0;
  }
}