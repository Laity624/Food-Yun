{
  "pages": [
    "pages/login/login",
    "pages/index/index",
    "pages/recipe-list/recipe-list",
    "pages/recipe-detail/recipe-detail",
    "pages/recipe-form/recipe-form",
    "pages/search/search",
    "pages/order/order",
    "pages/order-list/order-list",
    "pages/friends/friends",
    "pages/friend-requests/friend-requests",
    "pages/profile/profile"
  ],
  "window": {
    "backgroundTextStyle": "light",
    "navigationBarBackgroundColor": "#fff",
    "navigationBarTitleText": "Food-Yun",
    "navigationBarTextStyle": "black",
    "backgroundColor": "#f8f8f8"
  },
  "tabBar": {
    "color": "#999999",
    "selectedColor": "#07c160",
    "backgroundColor": "#ffffff",
    "borderStyle": "black",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "首页",
        "iconPath": "images/home.png",
        "selectedIconPath": "images/home-active.png"
      },
      {
        "pagePath": "pages/recipe-list/recipe-list",
        "text": "菜谱",
        "iconPath": "images/recipe.png",
        "selectedIconPath": "images/recipe-active.png"
      },
      {
        "pagePath": "pages/order/order",
        "text": "点餐",
        "iconPath": "images/order.png",
        "selectedIconPath": "images/order-active.png"
      },
      {
        "pagePath": "pages/friends/friends",
        "text": "好友",
        "iconPath": "images/friend.png",
        "selectedIconPath": "images/friend-active.png"
      },
      {
        "pagePath": "pages/profile/profile",
        "text": "我的",
        "iconPath": "images/profile.png",
        "selectedIconPath": "images/profile-active.png"
      }
    ]
  },
  "cloud": true,
  "permission": {
    "scope.userLocation": {
      "desc": "获取位置信息用于推荐附近菜谱"
    }
  },
  "requiredBackgroundModes": ["audio"],
  "networkTimeout": {
    "request": 10000,
    "downloadFile": 10000
  },
  "debug": true,
  "usingComponents": {
    "van-button": "@vant/weapp/button/index",
    "van-cell": "@vant/weapp/cell/index",
    "van-cell-group": "@vant/weapp/cell-group/index",
    "van-field": "@vant/weapp/field/index",
    "van-icon": "@vant/weapp/icon/index",
    "van-tab": "@vant/weapp/tab/index",
    "van-tabs": "@vant/weapp/tabs/index",
    "van-search": "@vant/weapp/search/index"
  }
}